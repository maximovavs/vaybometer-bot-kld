# — базовое —
TELEGRAM_TOKEN=PASTE_YOUR_TELEGRAM_BOT_TOKEN
CHANNEL_ID_KLG=-1001234567890          # целевой канал/чат (отриц. id)
TZ=Europe/Kaliningrad
#PRIMARY_CITY=Kaliningrad               # опционально
DISABLE_LLM_DAILY=0                     # 1 — отключить "Астрособытия"

# — Safecast —
SAFECAST_FILE=./data/safecast_kaliningrad.json
CPM_TO_USVH=0.000571

# — Водные активности (пороги) —
# KITE / Винг / винд
KITE_WIND_MIN=6
KITE_WIND_GOOD_MIN=7
KITE_WIND_GOOD_MAX=12
KITE_WIND_STRONG_MAX=18
KITE_GUST_RATIO_BAD=1.5                # порыв/средний > 1.5 → плохо
KITE_WAVE_WARN=2.5                      # м: слишком большая волна

# SUP
SUP_WIND_GOOD_MAX=4
SUP_WIND_OK_MAX=6
SUP_WIND_EDGE_MAX=8
SUP_WAVE_GOOD_MAX=0.6
SUP_WAVE_OK_MAX=0.8
SUP_WAVE_BAD_MIN=1.5
OFFSHORE_SUP_WIND_MIN=5                # при оффшоре сильнее этого — не ок

# SURF
SURF_WAVE_GOOD_MIN=0.9                 # м
SURF_WAVE_GOOD_MAX=2.5
SURF_WIND_MAX=10                       # м/с (сильнее — мешает серфингу)

# — Профиль береговой линии / споты —
# Можно выбрать активный спот (используется по умолчанию для всех морских городов)
ACTIVE_SPOT=Zelenogradsk

# Привязка конкретных городов к спотам (ключи чувствительны к названию города в коде)
# Допустимые значения см. в SPOT_SHORE_PROFILE (post_common.py): 
# Zelenogradsk, Svetlogorsk, Pionersky, Yantarny, "Baltiysk (Spit)", "Baltiysk (North beach)", Primorsk, Donskoye
SPOT_ZELENOGRADSK=Zelenogradsk
SPOT_SVETLOGORSK=Svetlogorsk
SPOT_PIONERSKY=Pionersky
SPOT_YANTARNY=Yantarny
SPOT_BALTIYSK="Baltiysk (Spit)"
